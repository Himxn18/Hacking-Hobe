#include<stdio.h>
#include<stdlib.h>
struct node
{
int data;
struct node *link;
};
struct node *front=NULL;
struct node *rear=NULL;
main()
{
int ch;
while(1)
{
printf("\n1.insert\n");
printf("\n2.delete\n");
printf("3.display\n");
scanf("%d",&ch);
switch(ch)
{
case 1:insert();
break;
case 2:delete();
break;
case 3:display();
break;
default: printf("Invalid Choice\n");
}
}
}
insert(int x)
{
struct node *temp;
temp=(struct node*)malloc(sizeof(struct node));
printf("Enter Node\n");
scanf("%d",&temp->data);
temp->link=0;
if(front==0&&rear==0)
{
front=rear=temp;
}
else{
rear->link=temp;
rear=temp;
}
}
delete()
{
struct node *temp;
temp=front;
if(front==0&&rear==0)
{
printf("Queue is empty\n");
}
else{
printf("Element deleted is %d\n",temp->data);
front=front->link;
free(temp);
}
}
display()
{
struct node *temp;
if(front==0&&rear==0)
{
printf("No element in the list\n");
}
else{
temp=front;
while(temp!=NULL)
{
printf("%d\t",temp->data);
temp=temp->link;
}
}
}
